{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // "preserveSymlinks": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": false,
    "newLine": "lf",
    "noEmitOnError": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.md",
    "**/*.d.ts",
    "docs/.vitepress/**/*.ts"
  ],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  },
  "exclude": [
    "**/.cache",
    "**/.temp",
    "**/.tmp",
    "**/cache",
    "**/temp",
    "**/tmp",
    "**/dist",
    "**/node_modules",
    "eslint.config.js"
  ]
}
